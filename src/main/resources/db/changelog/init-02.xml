<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

	<changeSet id="2" author="postgres">

		<!-- ====================================================== -->
		<!-- Création des séquences author, book, tag et usr 		-->
		<!-- ====================================================== -->
		<createSequence sequenceName="author_sequence"
						incrementBy="1"
						startValue="1"/>

		<createSequence sequenceName="book_sequence"
						incrementBy="1"
						startValue="1"/>

		<createSequence sequenceName="tag_sequence"
						incrementBy="1"
						startValue="1"/>

		<createSequence sequenceName="usr_sequence"
						incrementBy="1"
						startValue="1"/>
	</changeSet>

</databaseChangeLog>